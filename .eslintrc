{
    "extends": [
        "eslint:recommended"
    ],
    "parserOptions": {
        "sourceType": "module",
    },
    "env": {
        "node": true,
        "mocha": true
    },
    "rules": {
        "prefer-const": 1,
        "prefer-arrow-callback": 1,
        "no-var": 2,
        "no-bitwise": 2,
        "max-lines": 1,
        "max-len": [
            1,
            {
                "code": 162
            }
        ],
        "func-style": 1,
        "comma-dangle": [
            1,
            "never"
        ],
        "camelcase": 2,
        "brace-style": [
            1,
            "1tbs",
            {
                "allowSingleLine": true
            }
        ],
        "array-bracket-spacing": [
            1,
            "never"
        ],
        "no-octal-escape": 2,
        "no-implicit-globals": 2,
        "no-fallthrough": 0,
        "no-extend-native": 2,
        "no-eval": 2,
        "no-empty-function": 1,
        "no-caller": 2,
        "no-alert": 1,
        "no-use-before-define": [
            "warn",
            {
                "functions": true,
                "classes": true
            }
        ],
        "eqeqeq": 1,
        "dot-location": [
            1,
            "property"
        ],
        "block-scoped-var": 2,
        "no-unused-vars": 1,
        "no-console": 1,
        "require-yield": 0,
        "no-multiple-empty-lines": 2
    }
}